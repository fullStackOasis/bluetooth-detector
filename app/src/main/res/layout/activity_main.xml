<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/bluetoothStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bluetooth_searching"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnViewPairedDevices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_view_paired_devices" />

    <Button
        android:id="@+id/btnViewDiscoverDevices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_view_discover_devices" />

    <Button
        android:id="@+id/btnDiscoverBLEDevices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_discover_ble_devices" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/lLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp"></LinearLayout>
    </ScrollView>

</LinearLayout>